<?xml version="1.0" encoding="UTF-8"?>
<plug-in>
    <name>indicator</name>
    <class>fr.paris.lutece.portal.service.plugin.PluginDefaultImplementation</class>
    <version>1.0.0</version>
    <documentation></documentation>
    <installation></installation>
    <changes></changes>
    <user-guide></user-guide>
    <description>indicator.plugin.description</description>
    <provider>indicator.plugin.provider</provider>
    <provider-url>http://dev.lutece.paris.fr</provider-url>
    <icon-url>images/admin/skin/feature_default_icon.png</icon-url>
    <copyright>Copyright (c) 2015 City of Paris</copyright>
    <db-pool-required>1</db-pool-required>
    
    <core-version-dependency>
        <min-core-version>4.1.0</min-core-version>
        <max-core-version/>	
    </core-version-dependency>

    <!-- Admin features parameters -->
    <admin-features>
        <admin-feature>
            <feature-id>INDICATOR_MANAGEMENT</feature-id>
            <feature-title>indicator.adminFeature.ManageIndicator.name</feature-title>
            <feature-description>indicator.adminFeature.ManageIndicator.description</feature-description>
            <feature-level>0</feature-level>
            <feature-url>jsp/admin/plugins/indicator/ManageIndicators.jsp</feature-url>
            <feature-icon-url></feature-icon-url>
      </admin-feature>
    </admin-features>    
    
    <!-- Daemons -->
    <daemons>
        <daemon>
            <daemon-id>indicatorUpdater</daemon-id>
            <daemon-name>indicator.daemon.indicatorUpdater.name</daemon-name>
            <daemon-description>indicator.daemon.indicatorUpdater.description</daemon-description>
            <daemon-class>fr.paris.lutece.plugins.indicator.service.IndicatorUpdaterDaemon</daemon-class>
        </daemon>
    </daemons>    

    <!-- XPages parameters -->
    <applications>
    </applications>

    <!-- Portlet parameters -->
    <portlets>
   </portlets>
</plug-in>